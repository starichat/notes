<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easyread">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name="com.example.easyread.service.UserService"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name="com.example.easyread.service.ArticleService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.example.easyread.ListActivity" />
        <activity android:name="com.example.easyread.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.easyread.MainActivity" />
    </application>

</manifest>